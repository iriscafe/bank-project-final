<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>BankNew</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuração do filtro de codificação -->
    <filter>
        <filter-name>encoding-filter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <async-supported>true</async-supported>
    </filter>

    <filter-mapping>
        <filter-name>encoding-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Mapeamento da página admin.jsp -->
    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <jsp-file>/admin.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!-- Mapeamento da página user.jsp -->
    <servlet>
        <servlet-name>UserPage</servlet-name>
        <jsp-file>/user.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!-- Mapeamento do servlet UsuarioServlet -->
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>com.example.servlets.UsuarioServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuario</url-pattern> <!-- Ajuste o padrão conforme necessário -->
    </servlet-mapping>



    <!-- Mapeamento do servlet AutenticaController -->
    <servlet>
        <servlet-name>AutenticaController</servlet-name>
        <servlet-class>com.example.servlets.AutenticaController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AutenticaController</servlet-name>
        <url-pattern>/autentica</url-pattern><!-- Ajuste o padrão conforme necessário -->
    </servlet-mapping>


    <!-- Mapeamento do servlet ProcessaCadastroServlet -->
    <servlet>
        <servlet-name>ProcessaCadastroServlet</servlet-name>
        <servlet-class>com.example.servlets.ProcessaCadastroServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProcessaCadastroServlet</servlet-name>
        <url-pattern>/ProcessaCadastroServlet</url-pattern>
    </servlet-mapping>


    
</web-app>
